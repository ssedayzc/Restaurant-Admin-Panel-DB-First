 <script>
    // JavaScript code to handle clicking on the star icon
    const starLinks = document.querySelectorAll('.star-message');
    starLinks.forEach(link => {
        link.addEventListener('click', function(event) {
            event.preventDefault();
            // Toggle the star icon's appearance
            const starIcon = link.querySelector('i');
            starIcon.classList.toggle('fas'); // Add the "fas" class to fill the star
            // Perform your logic here to mark the message as starred or move it to "Önemliler"
            if (starIcon.classList.contains('fas')) {
                alert('Message marked as important!');
            } else {
                alert('Message unmarked as important!');
            }
        });
    });
 </script>